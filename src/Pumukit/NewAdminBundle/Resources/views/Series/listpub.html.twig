{% if app.user and is_granted(constant('Pumukit\\SchemaBundle\\Security\\Permission::ACCESS_MULTIMEDIA_SERIES')) %}
{% for pub in pubs %}
<div class="checkbox{{ (not pub.getDisplay()) ? ' pmk_disabled_checkbox':'' }}">
  {# TODO: #9608 Improve this with a better option #}
  {% if pub.getCod() == "PUDENEW" %}
  {% set status = series.announce %}
  {% else %}
  {% set status = series.getProperty(pub.getCod()) %}
  {% endif %}
  <label>
    <input type="checkbox"
           name="pub_{{ pub_type }}[{{ pub.cod }}]"
	       id="pub_{{ pub_type }}_{{ pub.cod }}"
           class="pub_channel_input_checkbox"
	       {{ (status)?'checked="checked"':"" }}
           {{ ((not pub.getDisplay()) or ((pub_type == 'channels') and not_change_pub_channel)) ? 'disabled="disabled"' : '' }}
           />
    {{ pub.getTitle() }}
    {% if pub.getProperty('modal_path') and path_exists(pub.getProperty('modal_path')) %}
    <a title="{% trans %}Edit Pub Channel {% endtrans %} {{pub.cod}}" href="{{ path( pub.getProperty('modal_path'), { 'id': series.id }) }}" data-toggle="modal" data-target="#myModal">
      <i class="mdi-action-settings"></i>
    </a>
    {% endif %}    
  </label>
</div>
{% endfor %}
{% endif %}
