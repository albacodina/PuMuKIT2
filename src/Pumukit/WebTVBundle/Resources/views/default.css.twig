    overflow: hidden;
}
.info-wrapper {
    overflow: hidden;
}
.language_select_wrapper {
    float: right;
    margin: 8px;
}
.language_select_wrapper .btn{
    background: none;
    border: none;
}

.main-content {
    overflow: hidden;
    background: {{ content_background }};
    min-height: 600px;
}
.menu {
    background: {{ menu_background }};
    border: 0;
}

