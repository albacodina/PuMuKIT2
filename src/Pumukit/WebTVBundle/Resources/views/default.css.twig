    float: left;
    padding-left: 10px;
    width: 100%;
    min-height: 60px;
    overflow: hidden;
    display: inline;
    word-wrap: break-word;
}
.info .title{
    font-weight: bold;
    font-size: 0.9em;
    max-height: 2.7em;
    word-wrap: break-word;
    overflow: hidden;
    -webkit-line-clamp: 2;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    text-overflow: ellipsis;
}
