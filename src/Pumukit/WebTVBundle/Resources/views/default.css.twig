{% block body %}
{# SET VARIABLES #}
{% set default_contrast_background = default_contrast_background | default("#ed6d00") %}
{% set default_light_background = default_light_background | default("#fff") %}
{% set default_content_background = default_content_background | default("#fff") %}

{% set default_contrast_font = default_contrast_font | default("#fff") %}
{% set default_light_font = default_light_font | default("#858585") %}
{% set default_content_font = default_content_font | default("#111") %}
{% set default_content_link_font = default_content_link_font | default("#222") %}
{% set default_content_link_selected_font = default_content_link_selected_font | default("#444") %}

{% set breadcrumbs_separator = breadcrumbs_separator | default('Â»') %}
{% set content_max_width = content_max_width | default("1200px") %}
{% set menu_stats = menu_stats | default(true) %}
{% set menu_padding = menu_padding | default("10px 10px 10px 30px") %}
{% set page_background = page_background | default("#ddd") %}

{# DEFAULT ASPECT RATIO: 12:9#}
{% set thumbnail_width = thumbnail_width|default(152) %}
{% set thumbnail_height = thumbnail_height|default(114) %}
{% set thumbnail_border = thumbnail_border|default(2) %}

{# DEPENDABLE: If not set they will use other variables as default #}
{% set breadcrumbs_background = breadcrumbs_background | default(default_contrast_background) %}
{% set breadcrumbs_font_color = breadcrumbs_font_color | default(default_contrast_font) %}
{% set breadcrumbs_back_background = breadcrumbs_back_background | default(breadcrumbs_background) %}
{% set breadcrumbs_max_width = breadcrumbs_max_width | default(content_max_width) %}
{% set content_background = content_background | default(default_content_background) %}
{% set header_max_width = header_max_width | default(content_max_width) %}
{% set header_background = header_background | default(default_content_background) %}
{% set header_background_mobile = header_background_mobile | default(default_contrast_background) %}
{% set label_background = label_background | default('#8A8A8A') %}
{% set label_font = label_font | default('#fff') %}
{% set menu_background = menu_background | default(default_light_background) %}
{% set menu_font_color = menu_font_color | default(default_light_font) %}
{% set menu_selected_background = menu_selected_background | default(default_light_font) %}
{% set menu_selected_font_color = menu_selected_font_color | default(default_light_background) %}
{% set mmobj_font_color = mmobj_font_color | default(default_content_font) %}
{% set mmobj_selected_font_color = mmobjs_selected_font_color | default(default_content_font) %}
{% set mmobj_selected_background = mmobj_selected_background | default('#ededed') %}
{% set mmobj_serie_background = mmobj_serie_background | default(mmobj_selected_background) %}
{% set mmobj_serie_font = mmobj_serie_font | default(mmobj_selected_font_color) %}
{% set navbar_background = navbar_background | default(default_light_background) %}
{% set navbar_font = navbar_background | default(default_light_font) %}
{% set panel_default_background = panel_default_background | default(default_light_background) %}
{% set panel_default_font = panel_default_font | default(default_light_font) %}
{% set footer_max_width = footer_max_width | default(content_max_width) %}
{% set panel_heading_background = panel_heading_background | default('#ededed') %}
{% set panel_heading_font = panel_heading_font | default('#000') %}


{% set big_breadcrumbs = big_breadcrumbs | default(true) %}
{# END SET VARIABLES#}
body {
    background: {{ page_background }};
}
a:hover, a:focus {
    text-decoration: none;
    color: {{ default_content_link_selected_font }};
}
a {
    color: {{ default_content_link_font }};
}
ul, ol {
    list-style:none;
    margin: 0px;
    padding: 0px;
}
h1 {
    font-size: 40px;
    font-weight: bold;
    color: {{ default_content_font }};
}
h2 {
    color: {{ default_content_font }};

}
h3 {
    color: {{ default_content_font }};
}
h4 {
    font-weight: bold;
    font-size: 1.2em;
}
footer {
    background: black;
    color: grey;
}

/*END BASE CSS*/
.footer-content {
    margin: 0 auto;
    max-width: {{footer_max_width}};
    padding: 20px;
}
p.disabled {
    color: grey;
}
/*BOOTSTRAP OVERRIDE*/
.label {
    margin: 2px;
    background: {{ label_background }};
    color: {{ label_font }};
    border-radius: 5px;
    padding: 5px;
}
.label a{
    background: {{ label_background }};
    color: {{ label_font }};
}
.label a:hover{
    background: grey;
    color: #ececec;
}
.label:hover{
    background: grey;
    color: #ececec;
}
.breadcrumb {
    color: {{ breadcrumbs_font_color }};
    background: {{ breadcrumbs_background }};
    vertical-align:middle;
    line-height: 100%;
}
.breadcrumb a{
    color: {{ breadcrumbs_font_color }};
}
.breadcrumb a:hover{
    color: {{ breadcrumbs_font_color }};
    text-decoration: none;
}

.breadcrumbs_wrapper {
    margin: 0 auto;
    max-width: {{ content_max_width }};
}
.breadcrumbs_color {
    background: {{ breadcrumbs_back_background }};
}
{% if big_breadcrumbs is defined and big_breadcrumbs %}
.title-for-crumbs {
    display: none;
}
@media (max-width: 1199px) {
.title-for-crumbs {

    display: none;
}
}
.title-for-crumbs.always-hide {

    display: none;
}
.breadcrumb > li:last-of-type {
    display: block;
    font-size: 3.8em;
    content: "";
    line-height: 100%;
}
.breadcrumb > li:last-of-type:after  {
    content: "";
}
.breadcrumb > li:after {
    content: "{{ breadcrumbs_separator }}";
    padding: 0px 5px;

}
.breadcrumb > li + li:before {
    content: "\00a0";
    padding: 0px;

}
.breadcrumb li:first-child {
    padding-bottom: 10px;
}

{% endif %}


.navbar {
    margin-bottom: 0px;
}
.navbar-brand {
    padding: 5px 5px 5px 15px;
}
.navbar-default {
    background-color: {{ navbar_background }};
    border-color: {{ navbar_background }};
    border: none;
}

.navbar-collapse {
    box-shadow: none;
    border: none;
}
.panel-default > .panel-heading {
    background: {{ panel_heading_background }};
    color: {{ panel_heading_font }};
}

/*END BOOTSTRAP OVERRIDE*/

.col-no-padding {
    overflow: auto;
}
.nomargin {
    margin: 0;
}
.nopadding {
    padding: 0;
}
.cover {
    position: absolute;
    bottom: 0px;
    right: 0px;
    width: 100%;
    padding: 10px 5px;
}
.date {
    text-align: right;
}
.date.mmobj {
    font-size: 1.2em;
    position: absolute;
    bottom: 10%;
    left: {{thumbnail_width+20}}px;
    position: absolute;
    text-align: left;
}
.date.serial {
    left: {{thumbnail_width+30}}px;
    bottom: 9%;
    position: absolute;
    font-size: 1.2em;
    text-align: inherit;
}

/*=====   HEADER   ======*/
.header {
    background: {{ header_background }};
}
.header-content{
    margin: 0 auto;
    max-width: {{ header_max_width }};
    min-height: 80px;
    padding: 15px 0px;
}
.header.sticky {
    position: fixed;
    top: 0;
    transition: top 0.2s ease-in-out;
    width: 100%;
    z-index:6;
}
.header.sticky.nav-up {
    top: -60px;
}
.header.sticky.nav-up {
    top: 0;
}
.mobile_header {
    background: {{ header_background_mobile }};
    color: #fff;
}
.navbar-header button.menu-button .icon-bar {
    background-color: #fff
}
.mobile_header button.language-button {
    background: #5472D2;
    color: #fff;
}
.mobile_header button.search-button {
    padding: 5px 7px;
}
/*=====   END HEADER   ======*/


.info.serial {
    padding-left: 20px;
}
